<%- contentFor('title') %> Cadastrar venda
<%- contentFor('body') %>
<h1 class="text-3xl font-bold">Cadastrar venda</h1>
<form class="w-1/4 flex flex-col gap-4 mt-5" method="POST" action="/vendas/cadastrar">
    <label for="data">Data</label>
    <input type="date" name="data" id="data" class="border border-black rounded-lg focus:outline-none p-2 bg-white" />
    <label for="cliente">Cliente</label>
    <select name="cliente" id="cliente" class="border border-black rounded-lg focus:outline-none p-2 bg-white">
        <option selected disabled>Selecione um cliente</option>
        <% for (const cliente of clientes) { %>
            <option value="<%= cliente.codigo %>"><%= cliente.nome %></option>
        <% } %>
    </select>
    <label for="funcionario">Funcionário</label>
    <select name="funcionario" id="funcionario" class="border border-black rounded-lg focus:outline-none p-2 bg-white">
        <option selected disabled>Selecione um funcionário</option>
        <% for (const funcionario of funcionarios) { %>
            <option value="<%= funcionario.codigo %>"><%= funcionario.nome %></option>
        <% } %>
    </select>
    <label for="valor">Valor total</label>
    <input type="number" name="valor" id="valor" class="border border-black rounded-lg focus:outline-none p-2 bg-white" min="0" step="0.01" value="0" />
    <label for="items">Total de itens vendidos</label>
    <input type="number" name="items" id="items" class="border border-black rounded-lg focus:outline-none p-2 bg-white" min="1" step="1" value="1" />
    <button class="rounded-lg bg-primary font-semibold text-white text-lg py-2 px-5 mt-5 w-min">Cadastrar</button>
</form>
