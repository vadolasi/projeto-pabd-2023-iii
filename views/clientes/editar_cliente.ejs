<%- contentFor('title') %> Editar cliente - <%= cliente.nome %>
<%- contentFor('body') %>
<h1 class="text-3xl font-bold">Editar cliente - <%= cliente.nome %></h1>
<form class="w-1/4 flex flex-col gap-4 mt-5" method="POST" action="/clientes/<%= cliente.codigo %>/editar">
    <div class="flex flex-col gap-2">
        <label for="nome">Nome</label>
        <input value="<%= cliente.nome %>" type="text" name="nome" id="nome" class="border border-black rounded-lg focus:outline-none p-2 bg-white" />
    </div>
    <div class="flex flex-col gap-2">
        <label for="cpf">CPF</label>
        <input value="<%= cliente.cpf %>" type="text" name="cpf" id="cpf" class="border border-black rounded-lg focus:outline-none p-2 bg-white" />
    </div>
    <button class="rounded-lg bg-primary font-semibold text-white text-lg py-2 px-5 mt-5 w-min">Salvar</button>
</form>
